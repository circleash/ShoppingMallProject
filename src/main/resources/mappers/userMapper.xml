<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.Yeolgongpiltem.user.dao.UserDAO">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`loginId`
 			, `password`
 			, `userName`
 			, `userAddress`
 			, `userPhoneNumber`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 			) VALUES (
 				#{loginId}
 				, #{password}
 				, #{userName}
 				, #{userAddress}
 				, #{userPhoneNumber}
 				, #{email}
 				, now()
 				, now()	
 			);
 	</insert>
 	
 	<select id="selectCountByLoginId" parameterType="string" resultType="int">
 		SELECT
			count(*)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
 	
 	</select>
 	
 	<select id="selectUserByLoginIdPassword" resultType="com.Yeolgongpiltem.user.model.User" parameterType="map">
 		SELECT
 			`id`
 			,`loginId`
			, `password`
			, `userName`
 			, `userAddress`
 			, `userPhoneNumber`
 			, `email`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 	</select>
 </mapper>